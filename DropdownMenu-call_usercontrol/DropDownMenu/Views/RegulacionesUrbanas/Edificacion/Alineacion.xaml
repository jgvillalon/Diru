                      Padding="2"  TextAlignment="Right" PreviewTextInput="NumericOnly"
                                             Text="{Binding Textfield3, ValidatesOnDataErrors=True,
                UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="{Binding ErrorCollection[Textfield3]}"/>
                                </StackPanel>
                                <StackPanel>

                                    <Button Content="Observaciones" Margin="10 45 10 10" Click="ObservacionPatio_Click"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button FontSize="12" Margin="10 30 10 10" Foreground="Black" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Name = "BrowsePatio" Click = "Browse_Click"  HorizontalAlignment="Left" Width="200" Content="Cargar imagen ..."/>
